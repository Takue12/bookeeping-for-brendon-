{
  "name": "nexa-ledger",
  "version": "1.0.0",
  "description": "Advanced Personal Bookkeeping Services with AI-Powered Financial Assistant",
  "main": "backend/server.js",
  "scripts": {
    "prestart": "npm run security-check && npm run env-check",
    "start": "node backend/server.js",
    "dev": "set NODE_ENV=development&& nodemon backend/server.js --watch backend",
    "frontend": "npx http-server public -p 3002 -o -c-1",
    "lint": "eslint . --ext .js,.jsx --fix",
    "test": "set NODE_ENV=test&& jest --coverage --passWithNoTests",
    "build-frontend": "parcel build frontend/index.html --dist-dir public",
    "security-check": "npx audit-ci --moderate",
    "prod": "set NODE_ENV=production&& node backend/server.js",
    "env-check": "node -e \"require('dotenv').config(); if (!process.env.OPENAI_API_KEY) { console.error('❌ OPENAI_API_KEY missing in env'); process.exit(1); }\"",
    "docker-build": "docker build -t nexa-ledger .",
    "docker-run": "docker run -p 3001:3001 --env-file .env nexa-ledger"
  },
  "keywords": [
    "bookkeeping",
    "finance",
    "ai",
    "chatgpt",
    "accounting",
    "services",
    "financial-assistant"
  ],
  "author": "Brendon Mandizvidza",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.30.0"
  },
  "devDependencies": {
    "audit-ci": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^16.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-security": "^1.7.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "parcel": "^2.12.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "backend/**/*.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
