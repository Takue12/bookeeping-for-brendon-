{
  "name": "nexa-ledger",
  "version": "1.0.0",
  "description": "Advanced Personal Bookkeeping Services with AI-Powered Financial Assistant",
  "main": "backend/server.js",
{
  "scripts": {
    "prebuild": "npm install --legacy-peer-deps",
    "build-frontend": "parcel build frontend/index.html --dist-dir public --no-source-maps",
    "build-server": "node scripts/build-server.js",
    "start": "node backend/server.js"
  }
}
  "keywords": [
    "bookkeeping",
    "finance",
    "ai",
    "chatgpt",
    "accounting",
    "services",
    "financial-assistant"
  ],
  "author": "Brendon Mandizvidza",
  "license": "ISC",
  "dependencies": {
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "16.4.4",
    "express": "4.19.2",
    "express-rate-limit": "7.1.3",
    "helmet": "7.1.0",
    "morgan": "1.10.0",
    "openai": "4.40.0"
  },
  "devDependencies": {
    "audit-ci": "7.1.1",
    "eslint": "9.4.0",
    "eslint-config-airbnb-base": "19.0.0",
    "eslint-plugin-import": "2.32.1",
    "http-server": "14.1.1",
    "jest": "29.7.0",
    "nodemon": "3.1.0",
    "parcel": "2.12.0",
    "supertest": "6.3.4"
  },
  "engines": {
    "node": "20.12.1",
    "npm": "10.7.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "backend/**/*.js"
    ]
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not ie 11",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
