{
  "name": "nexa-ledger",
  "version": "1.0.0",
  "description": "Advanced Personal Bookkeeping Services with AI Integration",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "NODE_ENV=development nodemon backend/server.js",
    "frontend": "npx http-server . -p 3002 -o -c-1",
    "lint": "eslint . --ext .js,.jsx",
    "test": "NODE_ENV=test jest --passWithNoTests",
    "build-frontend": "parcel build frontend/index.html --dist-dir public",
    "security-check": "npx audit-ci --moderate",
    "prod": "NODE_ENV=production node backend/server.js"
  },
  "keywords": [
    "bookkeeping",
    "finance",
    "ai",
    "chatgpt",
    "accounting",
    "services"
  ],
  "author": "Brendon Mandizvidza",
  "license": "ISC",
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-rate-limit": "^7.1.3",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.30.0"
  },
  "devDependencies": {
    "audit-ci": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^16.1.0",
    "eslint-plugin-import": "^2.29.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "parcel": "^2.12.0",
    "supertest": "^6.3.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
